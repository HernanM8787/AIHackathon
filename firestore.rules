rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection - users can only access their own events
    match /events/{eventId} {
      // Read: user can read their own events
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Create: user can create events with their own userId
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Update/Delete: user can only modify their own events
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // RSVP subcollection - users can update their own RSVP
      match /rsvps/{rsvpUserId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
          request.auth.uid == rsvpUserId;
      }
    }
  }
}

